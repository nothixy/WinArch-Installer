
alias dialog='dialog --backtitle "WinArch installer (second stage)"'
rfkill unblock all
if ! ping -c2 google.com >/dev/null 2>&1; then
	nmtui
	if ! ping -c2 google.com >/dev/null; then
		echo "The execution failed because you are not connected to the internet, you can try to run nmtui again and when you are connected to the internet please run '/autorun' again"
		exit 1
	fi
fi
timedatectl set-ntp true
dialog --colors --infobox "\Z2Wait\Zn : Formatting partitions" 20 50
yes | mkfs.ext4 -F -F -q -L ARCH /dev/disk/by-label/ARCH > /dev/tty2 2>&1
mount /dev/disk/by-label/ARCH /mnt
mkdir -p /mnt/boot
drive="/dev/$(lsblk -ndo pkname $(findmnt /mnt -o SOURCE -un))"
device="$(fdisk -l $device -o Device,Type | grep "EFI System" | cut -d' ' -f1)"
mount "$device" /mnt/boot
dialog --colors --infobox "\Z2Done\Zn : Formatting partitions\n\Z2Wait\Zn : Installing packages" 20 50
case $desktop in
	gnome) pacstrap /mnt gnome-software-packagekit-plugin gnome gdm linux linux-firmware flatpak base base-devel networkmanager bluez firefox bash-completion grub os-prober xorg > /dev/tty2 2>&1; export dm=gdm;;
	kde) pacstrap /mnt plasma dolphin konsole discover packagekit-qt5 plasma-wayland-session sddm linux linux-firmware flatpak base base-devel networkmanager bluez firefox bash-completion grub os-prober xorg > /dev/tty2 2>&1; export dm=sddm;;
	budgie) pacstrap /mnt budgie-desktop gnome gnome-software-packagekit-plugin lightdm-webkit-theme-litarvan lightdm-webkit2-greeter lightdm linux linux-firmware flatpak base base-devel networkmanager bluez firefox bash-completion grub os-prober xorg > /dev/tty2 2>&1; export dm=lightdm; export greeter=lightdm-webkit2-greeter;;
	cinnamon) pacstrap /mnt cinnamon gnome-software gnome-software-packagekit-plugin lightdm-slick-greeter lightdm linux linux-firmware flatpak base base-devel networkmanager bluez firefox bash-completion grub os-prober xorg > /dev/tty2 2>&1; export dm=lightdm; export greeter=lightdm-slick-greeter;;
	pantheon) pacstrap /mnt pantheon ligthdm-pantheon-greeter lightdm linux linux-firmware flatpak base base-devel networkmanager bluez firefox bash-completion grub os-prober xorg > /dev/tty2 2>&1; export dm=lightdm; export greeter=io.elementary.greeter;;
	dde) pacstrap /mnt deepin deepin-extra deepin-store deepin-session-shell lightdm linux linux-firmware flatpak base base-devel networkmanager bluez firefox bash-completion grub os-prober xorg > /dev/tty2 2>&1; export dm=lightdm; export greeter=ligthdm-deepin-greeter;;
esac
dialog --colors --infobox "\Z2Done\Zn : Formatting partitions\n\Z2Done\Zn : Installing packages\n\Z2Wait\Zn : Editing fstab" 20 50
genfstab -U /mnt | tee -a /mnt/etc/fstab > /dev/tty2 2>&1
dialog --colors --infobox "\Z2Done\Zn : Formatting partitions\n\Z2Done\Zn : Installing packages\n\Z2Done\Zn : Editing fstab\n\Z2Wait\Zn : Setting hostname" 20 50
cat <<- EOF | arch-chroot /mnt > /dev/tty2 2>&1
	echo "$hostname" | tee /etc/hostname
EOF
dialog --colors --infobox "\Z2Done\Zn : Formatting partitions\n\Z2Done\Zn : Installing packages\n\Z2Done\Zn : Editing fstab\n\Z2Done\Zn : Setting hostname\n\Z2Wait\Zn : Configuring locale" 20 50
cat <<- EOF | arch-chroot /mnt > /dev/tty2 2>&1
	echo "$language" | tee -a /etc/locale.gen
	locale-gen
	echo "LANG=$(echo $language | cut -d' ' -f1)" | tee -a /etc/locale.conf
	echo "KEYMAP=$keymap" | tee /etc/vconsole.conf
	ln -svf /usr/share/zoneinfo/$timezone /etc/localtime
EOF
dialog --colors --infobox "\Z2Done\Zn : Formatting partitions\n\Z2Done\Zn : Installing packages\n\Z2Done\Zn : Editing fstab\n\Z2Done\Zn : Setting hostname\n\Z2Done\Zn : Configuring locale\n\Z2Wait\Zn : Configuring users" 20 50
cat <<- EOF | arch-chroot /mnt > /dev/tty2 2>&1
	useradd -mG wheel,sys "$unamesys"
	echo -e "$password\n$password" | passwd "$unamesys"
	if [ $uname != "" ]; then
		chfn -f "$uname" "$unamesys"
	fi
	rand=$(date +%s | sha256sum | base64 | head -c 32 ; echo)
	echo -e "$rand\n$rand" | passwd root
EOF
dialog --colors --infobox "\Z2Done\Zn : Formatting partitions\n\Z2Done\Zn : Installing packages\n\Z2Done\Zn : Editing fstab\n\Z2Done\Zn : Setting hostname\n\Z2Done\Zn : Configuring locale\n\Z2Done\Zn : Configuring user\n\Z2Wait\Zn : Configuring system services" 20 50
cat <<- EOF | arch-chroot /mnt > /dev/tty2 2>&1
	if [ $dm = "lightdm" ]; then
		sed -i "s/example-gtk-gnome/$greeter/g" /etc/lightdm/lightdm.conf
		if [ $greeter = "lightdm-webkit2-greeter" ]; then
			sed -i "s/antergos/litarvan/" /etc/lightdm/lightdm-webkit2-greeter.conf
		fi
	fi
	systemctl enable NetworkManager bluetooth $dm
EOF
dialog --colors --infobox "\Z2Done\Zn : Formatting partitions\n\Z2Done\Zn : Installing packages\n\Z2Done\Zn : Editing fstab\n\Z2Done\Zn : Setting hostname\n\Z2Done\Zn : Configuring locale\n\Z2Done\Zn : Configuring user\n\Z2Done\Zn : Configuring system services\n\Z2Wait\Zn : Configuring details" 20 50
cat <<- EOF | arch-chroot /mnt > /dev/tty2 2>&1
	echo -e "127.0.0.1	localhost\n::1		localhost\n127.0.1.1	$hostname" | tee -a /etc/hosts
	echo -e "%wheel ALL=(ALL) ALL" | tee -a /etc/sudoers
EOF
dialog --colors --infobox "\Z2Done\Zn : Formatting partitions\n\Z2Done\Zn : Installing packages\n\Z2Done\Zn : Editing fstab\n\Z2Done\Zn : Setting hostname\n\Z2Done\Zn : Configuring locale\n\Z2Done\Zn : Configuring user\n\Z2Done\Zn : Configuring system services\n\Z2Done\Zn : Configuring details\n\Z2Wait\Zn : Installing bootloader" 20 50
cat <<- EOF | arch-chroot /mnt > /dev/tty2 2>&1
	echo "GRUB_DISABLE_OS_PROBER=false" | tee -a /etc/default/grub
	grub-mkconfig -o /boot/grub/grub.cfg
EOF
dialog --msgbox "Everything should be installed now, press Enter to reboot" 20 50
systemctl reboot